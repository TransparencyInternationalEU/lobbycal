<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />
	<!-- Added the entity Alias. -->
	<changeSet id="20150620171808" author="lobbycal">
		<validCheckSum>7:68e60e6d4b8c55e157ccfc4081e377df</validCheckSum>
		<createTable tableName="ALIAS">
			<column name="id" type="bigint" autoIncrement="${autoIncrement}">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="alias" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="active" type="boolean" />
			<column name="user_id" type="bigint" />
		</createTable>

		<addForeignKeyConstraint baseColumnNames="user_id"
			baseTableName="ALIAS" constraintName="fk_alias_user_id"
			referencedColumnNames="id" referencedTableName="JHI_USER" />
		<addUniqueConstraint columnNames="alias"
			constraintName="UC_ALIASALIAS_COL" deferrable="false" disabled="false"
			initiallyDeferred="false" tableName="ALIAS" />
		<loadData encoding="UTF-8" file="config/liquibase/aliases.csv"
			separator=";" tableName="ALIAS">
			<column name="id" type="numeric" />
			<column name="alias" type="string" />
			<column name="active" type="boolean" />
			<column name="user_id" type="numeric" />

		</loadData>

	</changeSet>
</databaseChangeLog>
