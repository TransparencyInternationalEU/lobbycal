<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Tag.
    -->
    <changeSet id="20150618203148" author="lobbycal">
        <createTable tableName="TAG">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="i18n_key" type="varchar(255)"/>
            <column name="de" type="varchar(255)"/>
            <column name="en" type="varchar(255)"/>
            <column name="fr" type="varchar(255)"/>
            <column name="es" type="varchar(255)"/>
        </createTable>
        <loadData encoding="UTF-8"
                  file="config/liquibase/tags.csv"
                  separator=";"
                  tableName="TAG">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
